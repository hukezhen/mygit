/*弹窗*/


.mask{
	position: fixed;
	background: #000;
	opacity: .5;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 10;
}

.pop-content{
	position: fixed;
	z-index: 11;
	display: flex;
	-webkit-display:flex;
	justify-content: center;
	align-items: center;
	-webkit-justify-content: center;
	-webkit-align-items: center;overflow: hidden;
	width: 100%;
	height: 100%;
}

.pop-box{
	width: 700rpx;
	height: auto;
	overflow: hidden;
	background: #fff;
	border-radius: 10rpx;
}

.pop-title-box{
	position: relative;
	height: 100rpx;
	line-height: 100rpx;
	background: #f8f8f8;
	border-bottom: 1px solid #eee;
	text-align: center;
	color: #333;
}

.closebtn{
	position: absolute;
	right: 20rpx;
	top: 7rpx;
	width: 60rpx;
	height: 60rpx;
}

.closebtn image{
	width: 30rpx;
	height: 30rpx;
}

.fahongbao-box{
	padding: 50rpx 60rpx 30rpx;
}

.hongboxbox{
	margin-bottom: 30rpx;
}

.hongboxbox input{
	width: 100%;
	height: 86rpx;
	line-height: 86rpx;
	box-sizing:border-box;
	-webkit-box-sizing:border-box;
	border: 1px solid #eee;
	background: #f8f8f8;
	border-radius: 10rpx;
	padding-left: 20rpx;
	border:1px solid #eee;
}

.tips-text{
	line-height: 50rpx;
	color: #0e192f;
	font-size: 24rpx;
}

.dinger-hongbao{
	color: #fc3230;
}

.confirmbtn{
	width: 360rpx;
	height: 96rpx;
	line-height: 96rpx;
	color: #fff;
	font-size: 30rpx;
	text-align: center;
	background: #fc3230;	
	-webkit-box-shadow:0 0 12px #ff5b59; 
	box-shadow:0 0 12px #ff5b59;
	border-radius: 50rpx;
