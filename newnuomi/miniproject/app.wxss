/**app.wxss**/
@import "colorui/main.wxss";
@import "colorui/icon.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
} 
page{
	background: #f5f5f5;
}

.bottom-fiexd{
	display: flex;
	-webkit-display:flex;
	align-items: center;
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	background: #fff;
	border-top: 1px solid #eee;
	text-align: center;
	justify-content: center;
	-webkit-justify-content: center;
}

.btn-confirm,.btn-reset{
	height: 66rpx;
	line-height: 66rpx;
	border-radius: 50rpx;	
	margin: 0 20rpx;
	padding: 0 40rpx;
	font-size: 28rpx;
}

.btn-confirm{
	background-image: linear-gradient(90deg, #f33127 20%,#ff6944 80%);
	-webkit-background-image: linear-gradient(90deg, #f33127 20%,#ff6944 80%);	
	color: #fff;
}

.blue-btn{
	background-image: linear-gradient(90deg, #528fec 20%,#63a0fc 80%);
	-webkit-background-image: linear-gradient(90deg, #528fec 20%,#63a0fc 80%);	
}

.navigator-hover{
	background-color:rgba(0, 0, 0, 0);
}




