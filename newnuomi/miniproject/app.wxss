}

.hongbao-tuihui-tips{
	text-align: center;
	font-size: 24rpx;
	color: #999;
	padding-bottom: 20rpx;
	display: block;
}

.youhuika-text{
	text-align: center;
	border-bottom: 1px solid #eee;
	line-height: 100rpx;
}

.fa-youhuika-box .fahongbao-box{
	padding: 0 0 50rpx 0;
}

