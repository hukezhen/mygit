.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}

.log-item {
  margin: 10rpx;
}

.logsbox{
	margin:0 auto;
	/* width: 564rpx; */
	/* height: auto; */
	/* overflow: hidden; */
	/* padding:0 30rpx 30rpx; */
	font-size: 28rpx;
}

.phone-number,.verification-code{
	width: 560rpx;
	height: 86rpx;
	line-height: 86rpx;
	background: #fff;
	border: 1px solid #E6E6E6;
	border-radius: 10rpx;
	position: relative;
	display: flex;
	-webkit-display:flex;
	align-items: center;
	margin-top: 40rpx;
}

.error{
	color: #fc3230;
	font-size: 24rpx;
	margin-top: 15rpx;
}

.phone-number image{
	width: 1.2rem;
	height: 1.2rem;
	margin: 0 10rpx;
}

.phonenumber1{
	flex: 1;
	-webkit-flex:1;
}

.verification-code .code{
	width: 140rpx;
	text-align: center;
	color: #0E192F;
}

.verification-code input{
	flex: 1;
	-webkit-flex:1;
}

.verification-code .get-code{
	width: 200rpx;
	background: #ff5b52;
	text-align: center;
	border-radius: 0 10rpx 10rpx 0;
	color: #fff;
	font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.agreementbox{
	font-size: 28rpx;
	color:#0E192F;
	margin-top: 40rpx;
}

.agreementbox .checkbox1{
	vertical-align: 2px;
	margin-right: 10rpx;
}

.agreementbox{
	line-height: 40rpx;
  width: 560rpx;

}

.confirmbtn{
	width: 560rpx;
	height: 96rpx;
	line-height: 96rpx;
	color: #fff;
	font-size: 30rpx;
	text-align: center;
	background: #fc3230;	
	-webkit-box-shadow:0 0 12px #ff5b59; 
	box-shadow:0 0 12px #ff5b59;
	border-radius: 50rpx;
}

.confirm{
	margin-top: 100px;
}

.copyright{
	position: fixed;
	width: 100%;
	line-height: 100rpx;
	text-align: center;
	color: #999;
	font-size: 24rpx;
	bottom: 0;
	left: 0;
}

.img-log-yun image{
	width: 100%;
	height: 203rpx;
}

.img-log-che image{
	width: 100%;
	height: 255rpx;
}