page {
  background: #fff;
}

.feedbackdatail {
  padding-bottom: 120rpx;
}

.right-head-box, .left-head-box {
  overflow: hidden;
  margin-bottom: 30rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.left-head-box .face {
  margin-right: 10rpx;
}

.left-head-box .liaot-bg {
  position: relative;
  float: left;
  display: block;
  margin-left: 25rpx;
}

.right-head-box .face, .left-head-box .face {
  width: 70rpx;
  height: 70rpx;
  border-radius: 100%;
  float: left;
}

.right-head-box .liaot-bg  {
  margin-right: -2rpx;
}

.liaot-bg .time {
  font-size: 24rpx;
  color: gray;
}

.liaot-bg {
  background: #eee;
  border-radius: 8rpx;
  padding: 15rpx 20rpx;
  text-align: left;
  font-size: 30rpx;
  max-width: 440rpx;
  display: block;
  line-height: 44rpx;
  float: left;
}

.liaot-bg .image {
  float: left;
  width: 16rpx;
  height: 21rpx;
  margin-top: 18rpx;
  margin-right: -2rpx;
}

.feedbackdatail-list {
  padding: 30rpx;
}

.right-head-box .face {
  float: right;
}

.right-head-box .liaot-bg {
  float: right;
  position: relative;
  margin-right: 30rpx;
  background: #0074d0;
  color: #fff;
}

.left-head-box .liaot-bg:before{  
  position: absolute;
  left: -15rpx;
  content: "";
  top: 25rpx;
  width: 0px;
  height: 0px;
  border:10px solid #eee;
  border-top-color:#eee;
  border-bottom:#eee;
  border-left-color:rgba(255,255,255,0);
  border-right-color:none;
}

.right-head-box .liaot-bg:before{
  position: absolute;
  right: -15rpx;
  content: "";
  top: 25rpx;
  width: 0px;
  height: 0px;
  border:10px solid #0074d0;
  border-top-color:#0074d0;
  border-bottom:#0074d0;
  border-left-color:  none;
  border-right-color:rgba(255,255,255,0);
}

.right-head-box .liaot-bg .time{
  color: #fff;
}

.right-head-box  .liaot-bg .face {
  transform: rotate(180deg);
  -webkit-transform: rotate(180deg);
}

.bottom-input {
  position: fixed;
  width: 100%;
  height: 80rpx;
  background: #f6f6f6;
  border-top: 1px solid #e1e1e1;
  left: 0;
  bottom: 0;
  display: flex;
  -webkit-display: flex;
  justify-content: space-around;
  -webkit-justify-content: space-around;
  /* padding-top: 20rpx; */
  padding: 0 20rpx;
}

.bottom-input image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 30rpx;
}

.bottom-input input {
  flex: 1;
  -webkit-flex: 1;
  background: #fff;
  line-height: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  padding-left: 15rpx;
}

.cnt-cover {
  display: block;
  width: 100%;
}