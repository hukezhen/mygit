page{
	background: #fff;
}
.feedbackdatail{
	padding-bottom: 120rpx;
}
.right-head-box,.left-head-box{
	overflow: hidden;
	margin-bottom: 30rpx;
	padding-top: 10rpx;
	padding-bottom: 10rpx;
}
.left-head-box image{
	margin-right: 10rpx;
}
.left-head-box .liaot-bg{
	float: left;
	display: block;
}
.right-head-box image,.left-head-box image{
	float: left;
	width: 70rpx;
	height: 70rpx;
	border-radius: 100%;
	float: left;
}
.right-head-box .liaot-bg text{
	margin-right: -2rpx;
}
.liaot-bg text{
	background: #eeeeee;
	border-radius: 8rpx;
	padding:15rpx 20rpx;
	text-align: left;
	font-size: 26rpx;
	max-width: 440rpx;
	display: block;
	line-height: 44rpx;
	float: left;
}
.liaot-bg image{
	float: left;
	width: 16rpx;
	height: 21rpx;
	margin-top: 18rpx;
	margin-right: -2rpx;
}
.feedbackdatail-list{
	padding: 30rpx;
}
.right-head-box image{
	float: right;
}
.right-head-box .liaot-bg{
	float: right;
	margin-right: 10rpx;
}
.right-head-box  .liaot-bg image{	
	transform:rotate(180deg);
	-webkit-transform:rotate(180deg)
}
.bottom-input{
	position: fixed;
	width: 100%;
	height: 80rpx;
	background: #f6f6f6;
	border-top: 1px solid #e1e1e1;
	left: 0;
	bottom: 0;
	display:flex;
	-webkit-display: flex;
	justify-content: space-around;
	-webkit-justify-content: space-around;
	padding-top: 20rpx;
}
.bottom-input image{
	width: 80rpx;
	height: 65rpx;
}
.bottom-input input{
	flex: 1;
	-webkit-flex: 1;
	background: #fff;
	line-height: 60rpx;
	height: 60rpx;
	border-radius: 10rpx;
	padding-left: 15rpx;
}
