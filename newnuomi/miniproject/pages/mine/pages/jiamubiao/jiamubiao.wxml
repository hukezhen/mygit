				</view> -->
        <view class="hongboxbox">
          <text class="modify-name">促销价：</text>
          <input bindinput="editpricebind" type="number" value="{{currentEditGoods.price==0?'':currentEditGoods.price}}" name="" placeholder="请输入促销价"></input>
          <text class="modify-yuan">元</text>
        </view>
      </view>

      <!-- <view class="selective-class" hidden="{{iseditwash}}">
				<h2>请选择分类</h2>
				<view class="typebox">
         <text bindtap="seledittype" data-index="{{index}}" data-id="{{item.id}}" wx:for="{{typelist}}" wx:key="id" class="type001 {{currentedittype==item.id?'active':''}}">{{item.title}}</text>
				</view>
			</view> -->

    </view>
    <navigator bindtap="savegoods" class="confirmbtn confirm">保存</navigator>
  </view>
</view>


<!-- 修改次卡 -->
<view class="pop-content modify-price" hidden="{{!iseditWashCard}}">
  <view class="pop-box">
    <view class="pop-title-box" bindtap="closewashcardbtn">
      修改次卡
      <view class="closebtn">
        <image src="../../../images/icon-closexx.svg"></image>
      </view>
    </view>
    <view class="fahongbao-box">
      <view class="editname">
        <view class="hongboxbox">
          <text class="modify-name">洗车次数</text>
          <input disabled bindinput="editWashCardNumberbind" value="{{currentEditWashCard.number==0?'':currentEditWashCard.number}}" type="text" name="" placeholder="请输入次数"></input>
        </view>
        <view class="hongboxbox">
          <text class="modify-name">价格：</text>
          <input bindinput="editWashCardPricebind" type="number" value="{{currentEditWashCard.price==0?'':currentEditWashCard.price}}" name="" placeholder="请输入价格"></input>
          <text class="modify-yuan">元</text>
        </view>
      </view>
    </view>
    <navigator bindtap="saveeditWashCard" class="confirmbtn confirm">保存</navigator>
  </view>
</view>
<!-- 弹窗结束 -->

<!-- 购买广告弹窗开始 -->
<view class="pop-content fa-youhuika-box" hidden="{{!isbuyservice}}">
  <view class="pop-box">
    <view class="pop-title-box">

      <view bindtap="closeRecharge" class="closebtn">
        <image src="../../../images/icon-closexx.svg"></image>
      </view>
    </view>
    <view class="fahongbao-box">
      <view class="payment-content">
        <radio-group bindchange="radiochange">
          <view class="payment-items">

            <radio color="red" checked='checked' class='radio' value='0'></radio>

            <image src="../../../images/icon-yuer.png"></image>余额支付
            <text></text>
          </view>

          <view class="payment-items">

            <radio color="red" class='radio' value='1'></radio>

            <image src="../../../images/wx-icon.png"></image>微信支付
          </view>
        </radio-group>
      </view>
    </view>
    <view bindtap="recharge" class="confirmbtn confirm">确定</view>
  </view>
</view>

