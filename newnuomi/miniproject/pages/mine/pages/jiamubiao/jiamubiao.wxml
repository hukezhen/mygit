  <!-- 服务项目开始 -->
  <view class="service-items-box">
    <view class="titlebox">服务项目</view>

    <view class="order-list-box">
      <view class="order-list-box">
        <text bindtap="seltype" data-index="{{index}}" data-id="{{item.id}}" wx:for="{{typelist}}" wx:key="id" class="tab-items {{currenttype==item.id?'active':''}}">{{item.title}}</text>
      </view>
    </view>

    <!-- 服务列表 -->
    <view class="service-list">
      <view class="service-items" wx:for="{{goodslist}}" wx:key="id" data-index="{{index}}">
        <view class="service-img">
          <image data-src="{{item.cover_path}}" bindtap="previewImage" src="{{item.cover_path}}"></image>
        </view>
        <view class="pricebox001">
          <view class="service-titel">{{item.title}}
            <text>库存</text>{{item.stock}}</view>
          <view class="original-price">原价
            <text>{{item.original_price}}元</text>
          </view>
          <view class="promotion-price">
            <text>促销价</text>
            <text class="promotion-price001">{{item.price}}元</text>
          </view>
        </view>
        <view class="editbox001">
          <view bindtap="edit" data-index="{{index}}" class="editbtn001">
            <image src="../../../images/icon-edit.svg"></image>编辑</view>
          <view data-index="{{index}}" wx:if="{{item.shelf !=1 || item.stock==0}}" class="btn-confirm upper-shelf w150" bindtap="uppershelf">上架</view>
          <view data-index="{{index}}" bindtap="lowershelf" wx:else class="btn-confirm w150">
            下架
          </view>
        </view>
      </view>

    </view>


