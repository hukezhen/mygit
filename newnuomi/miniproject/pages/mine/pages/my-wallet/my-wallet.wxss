.my-wallet-banner {
  position: relative;
  width: 100%;
  height: 230rpx;
  background: #fc3230;
  border-radius: 0 0 60rpx 60rpx;
}

.my-wallet-title {
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 100rpx;
}

.wallet-box {
  display: flex;
  -webkit-display: flex;
  top: 110rpx;
  position: absolute;
  width: 690rpx;
  left: 30rpx;
  background: #fff;
  border-radius: 10rpx;
  /*-webkit-box-shadow:0 0 12px #515151; 
	box-shadow:0 0 12px #515151;*/
  padding: 30rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

.tixian-box {
  flex: 1;
  -webkit-flex: 1;
}

.tixian-box .txt03 {
  display: block;
  text-align: center;
  color: #999;
  line-height: 60rpx;
  margin-bottom: 10rpx;
}

.tixian-box .txt02 {
  display: block;
  color: #518eeb;
  font-size: 30rpx;
  line-height: 40rpx;
  text-align: center;
  font-weight: bold;
}

.tixian-box image {
  width: 35rpx;
  height: 35rpx;
  vertical-align: -3px;
  margin-right: 10rpx;
}

.chongzhi-box .txt02 {
  color: #fc012a;
  font-weight: bold;
}

.myhome-list .navigator {
  background: #fff;
  border-top: 1px solid #e3ecee;
  padding: 30rpx;
}

.myhome-list .navigator {
  display: flex;
  -webkit-display: flex;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  align-items: center;
  -webkit-align-items: center;
}

.myhome-list .navigator-text image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.myhome-list .navigator-arrow image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
}

.myhome-list {
  margin-top: 160rpx;
}

.open-ai-marke {
  margin: 20rpx 0 10rpx;
  overflow: hidden;
}

.open-ai-marke .an-rule {
  padding: 0 20rpx;
  border: 1px solid #eee;
  border-radius: 50rpx;
  background: #fff;
  color: #0e192f;
  font-size: 24rpx;
  margin-right: 20rpx;
  line-height: 50rpx;
  height: 50rpx;
  display: inline-block;
}

.open-ai-marke .an-rule.active {
  border: 1px solid #fc3230;
  color: #fc3230;
}

.my-wallet-list .chongzhi-text, .tixian-price {
  color: #0e192f;
}

.my-wallet-list .chongzhi-time {
  padding-left: 20rpx;
  color: #999;
}

.red-price {
  color: #fc3230;
  padding-right: 20rpx;
}

.tixian-price {
  padding-right: 20rpx;
}

.hongboxbox {
  clear: both;
  overflow: hidden;
  display: flex;
  -webkit-display: flex;
  margin-top: 40rpx;
  line-height: 90rpx;
  padding: 0 30rpx;
}

.hongboxbox input {
  flex: 1;
  -webkit-flex: 1;
}

.payment-content .payment-items {
  margin: 40rpx 0 50rpx 30rpx;
}

.payment-items text {
  color: #fc3230;
}

.confirm {
  margin-top: 10rpx;
}

.payment-title image {
  float: right;
  width: 30rpx;
  height: 30rpx;
  margin: 30rpx;
}

.payment-items image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 15rpx;
  margin-right: 20rpx;
}
