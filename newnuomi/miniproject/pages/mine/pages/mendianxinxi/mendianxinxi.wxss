.store-infor{
	padding: 30rpx 30rpx 150rpx;
	overflow: hidden;
}

.store-head-box{
	text-align: center;
}

.store-head{
	width: 200rpx;
	height: 200rpx;
	border-radius: 100%;
	border: 1px solid #ddd;
}

.upload-store-head{
	width: 280rpx;
	height: 60rx;
	line-height: 60rpx;
	border: 1px solid #ddd;
	border-radius: 30rpx;
	display: block;
	margin: 20rpx auto;
	font-size: 28rpx;
	background: #fff;

}

.store-infor-items{
	background: #fff;
	padding: 50rpx 50rpx 50rpx 0;
	-webkit-box-shadow:0 0 12px #d8d8d8; 
	box-shadow:0 0 12px #d8d8d8;	
	border-radius: 10rpx;
	margin-top: 40rpx;
	display: flex;
	-webkit-display:flex;
	align-items: center;
	-webkit-align-items: center;
	/* height: 66rpx;
	line-height: 66rpx; */
	font-size: 28rpx;
}

.store-infor-items .store-name{
	width: 180rpx;
	display: block;
	text-align: right;
	padding-right: 10rpx;
}

.store-infor-items input{
	flex: 1;
	-webkit-flex:1;
	border-radius: 6rpx;
	border: 1px solid #c2c2c2;
	background: #f8f8f8;
	line-height: 66rpx;
	padding-left: 10rpx;
	height: 66rpx;
}

.dingweiicon{
	width: 40rpx;
	height: 40rpx;
}

.bottom-fiexd{
	display: flex;
	-webkit-display:flex;
	align-items: center;
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	background: #fff;
	border-top: 1px solid #eee;
	text-align: center;
	justify-content: center;
	-webkit-justify-content: center;
}

.bottom-fiexd .btn-confirm,.bottom-fiexd .btn-reset{
	height: 66rpx;
	line-height: 66rpx;
	border-radius: 50rpx;	
	padding: 0 80rpx;
	margin: 0 20rpx;
}

.bottom-fiexd .btn-confirm{
	background-image: linear-gradient(90deg, #f33127 20%,#ff6944 80%);
	-webkit-background-image: linear-gradient(90deg, #f33127 20%,#ff6944 80%);	
	color: #fff;
}

.bottom-fiexd .btn-reset{
	border: 1px solid #c2c2c2;
	color: #0E192F;
}