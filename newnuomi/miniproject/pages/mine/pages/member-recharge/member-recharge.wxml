  <view class="footer-btn-box">
    <view class="agreement-btn">
      <image src="../../../images/agreement-btn.png"></image>
      <view class="agreement-txt">
        <radio checked="{{checked}}" catchtap='checkedTap' value="" />
        <text>已阅读并同意</text>
        <text>《拓米金会员用户协议》</text>
      </view>
    </view>
    <view class="payment-btn" bindtap="showModal">
      <image src="../../../images/agreement-btn-27.png"></image>
      <view class="payment-txt">
        <view>签约并支付￥
          <text>{{rechargetypes[currentindex].price/100}}</text>
        </view>
      </view>
    </view>
