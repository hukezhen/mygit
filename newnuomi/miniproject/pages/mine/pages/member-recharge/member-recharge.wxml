</view>


<view class="cu-modal {{modalName != null?'show': ''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">选择支付方式</view>
      <view class="action" bindtap="hideModal" id="-1">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="padding-xl pay-cnt">
      <view catchtap="hideModal" id="0">余额支付</view>
      <view catchtap="hideModal" id="1">微信支付</view>
    </view>
  </view>
