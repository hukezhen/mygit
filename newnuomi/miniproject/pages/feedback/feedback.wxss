.search-box{
	padding:20rpx 30rpx;
	display: flex;
	-webkit-display:flex;
}

.search-box input{
	flex: 1;
	-webkit-flex:1;
	height: 60rpx;
	line-height: 60rpx;
	background: #fff;
	border-radius: 10rpx 0 0 10rpx;
	padding-left: 20rpx;
}

.search-btn{
	width: 80rpx;
	height: 60rpx;
	background: #fff;
	border-radius: 0 10rpx 10rpx 0;
	text-align: center;
}

.search-btn image{
	width: 40rpx;
	height: 40rpx;
	margin-top: 10rpx;
}

.notice-items{
	padding: 0 0 0 30rpx;
	display: flex;
	-webkit-display: flex;
	justify-content: space-around;
	-webkit-justify-content: space-around;
	align-items: center;
	-webkit-align-items: center;
}
.notice-icon{
	position: relative;
	width: 70rpx;
	height: 70rpx;
}
.notice-icon image{
	width: 70rpx;
	height: 70rpx;
	border-radius: 100%;
}
.notice-content{
	font-size: 30rpx;
	line-height: 30rpx;
	flex: 1;
	-webkit-flex: 1;
	display: flex;
	-webkit-display: flex;
	justify-content: space-around;
	-webkit-justify-content: space-around;
	align-items: center;
	-webkit-align-items: center;	
	border-bottom: 1px solid #eee;
	padding: 10rpx 0;
	padding-left: 30rpx;
	padding: 30rpx 0;
	margin-left:30rpx;
}
.jifen-neirong{
	font-size: 28rpx;
	color: #666;
	line-height: 50rpx;
	height: 40rpx;
	margin-top: 10rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	width: 450rpx;
}
.noticelist{
	background: #fff;
}
.notice-content .time{
	font-size: 24rpx;
	color: #999;
	padding-right: 20rpx;
}
.notice-text{
	padding-right: 30rpx;
	flex: 1;
	-webkit-flex: 1;
}
.xitong-tongzhi{
	width: 65rpx;
	height: 25rpx;
	line-height: 25rpx;
	background: #ffcf5b;
	border-radius: 5rpx;
	text-align: center;
	font-size: 20rpx;
	text-align: center;
	color: #fff;
	margin-left: 20rpx;
	display:inline-block;
}

.notice-number{
	position: absolute;
	min-width: 30rpx;
	min-height: 30rpx;
	border-radius: 100%;
	border: 1px solid #fff;
	background: #fc3230;
	top: -5rpx;
	right: -10rpx;
	color: #fff;
	font-size: 20rpx;
	text-align: center;
  z-index: 99;
}