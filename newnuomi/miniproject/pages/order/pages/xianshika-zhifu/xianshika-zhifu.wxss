.order-infor{
	background: #fff;
	border-top: 1px solid #eee;
	border-bottom: 1px solid #eee;
	margin-top: 30rpx;
	padding: 30rpx;
}

.infor-items{
	display: flex;
	-webkit-display:flex;
	justify-content: space-between;
	-webkit-justify-content: space-between;
	color: #999;
	padding: 15rpx 0;
}

.wait-payment{
	text-align: center;
	padding: 40rpx 0;
}

.wait-payment image{
	width: 100rpx;
	height: 100rpx;
	display: block;
	margin:50rpx auto 0;
}

.wait-payment .success-txt{
	text-align: center;
	line-height: 80rpx;
	font-size: 30rpx;
	color: #0e192f;
	display: block;
}

.all-amount{
	font-size: 30rpx;
	font-weight: bold;
	border-top: 1px solid #eee;
	color: #0e192f;
}

.red-price{
	color: #fc3230;
}

.order-detail-box{
	padding: 10rpx 30rpx;
}

.wait-pay-box .bottom-fiexd .btn-confirm{
	padding: 0 100rpx;
}