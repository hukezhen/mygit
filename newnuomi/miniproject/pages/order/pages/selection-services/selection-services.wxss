.order-list-box{
	width: 100%;
	height: 88rpx;
	line-height: 88rpx;
	display: flex;
	-webkit-display:flex;
}

.tab-items{
	flex: 1;
	-webkit-flex:1;
	color: #878c97;
	font-size: 28rpx;
	text-align: center;
	border-bottom: 1px solid #eee;
	text-align: center;
}

.tab-items.active{
	color: #fc3230;
	border-bottom: 1px solid #fc3230;
}

.order-list-items{
	background: #fff;
	margin-bottom: 30rpx;
	border:1px solid #eee;
}

.fuwu-name{
	width: 500rpx;
}

.xiche-fuwu-liebiao{
	background: #fff;
	border-top: 1px solid #eee;
	border-bottom: 1px solid #eee;
	padding: 30rpx 0 0 30rpx;
	overflow: hidden;
}

.xiche-fuwu-liebiao .xiche-fuwu{
	float: left;
	display: block;
	padding: 10rpx 30rpx;
	border: 1px solid #eee;
	color: #333;
	font-size: 28rpx;
	text-align: center;
	overflow: hidden;
	border-radius: 50rpx;
	margin-right: 20rpx;
	margin-bottom: 30rpx;
}

.xiche-fuwu-liebiao .xiche-fuwu.active{
	border: 1px solid #fc3230;
	color: #fc3230;
}

.select-fuwu{
	padding: 30rpx;
	border-bottom: 1px solid #eee;
	background: #fff;
	display: flex;
	-webkit-display: flex;
	justify-content: space-between;
	-webkit-justify-content: space-between;
}

.fuwu-title{
	line-height: 60rpx;
	color: #fc3230;
	font-size: 24rpx;
	padding: 0 30rpx;
}

.fuwu-items{
	display: flex;
	-webkit-display: flex;
	justify-content: space-between;
	-webkit-justify-content: space-between;
	align-items: center;
	-webkit-align-items: center;
	background: #fff;
	padding: 30rpx;
	border-top: 1px solid #eee;
	border-bottom: 1px solid #eee;
}

.fuwu-items .delete-fuwu image{
	width: 40rpx;
	height: 40rpx;
}

.namebox{
	font-size: 28rpx;
	font-weight: bold;
	color: #0E192F;
	display: block;
	line-height: 50rpx;
}

.pricebox{
	color: #fc3230;
}

.introduction{
	color: #999;
	font-size: 24rpx;
	display: none;
}

.jiantou image{
	width: 30rpx;
	height: 30rpx;
}

.select-btn{
	width: 130rpx;
	height: 46rpx;
	border: 1rpx solid #fc3230;
	border-radius: 50rpx;
	line-height: 46rpx;
	text-align: center;
	color: #fc3230;
	font-size: 24rpx;
}

.selecton-items{
	border-top: none;
}

.selecton-items .fuwu-name{
	width: 400rpx;
}